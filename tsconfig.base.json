{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "skipLibCheck": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@spout/assets/icons/outline": [
        "libs/shared/assets/src/lib/icons/outline/index.ts"
      ],
      "@spout/assets/icons/solid": [
        "libs/shared/assets/src/lib/icons/solid/index.ts"
      ],
      "@spout/assets/illustrations": [
        "libs/shared/assets/src/lib/illustrations/index.ts"
      ],
      "@spout/toolkit": ["libs/toolkit/src/index.ts"],
      "@spout/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
